OPENAI_API_KEY=your_api_key_here

# Dual Model Configuration
# Reasoning model: Used for complex reasoning tasks (slower, more capable)
OPENAI_REASONING_MODEL=gpt-4.1-mini

# Inference model: Used for simple inference tasks (faster, cheaper)
OPENAI_INFERENCE_MODEL=gpt-4.1-nano

# Agent Configuration
# Maximum iterations for agent loop
MAX_ITERATIONS=10

# Enable verbose output for reasoning and debugging
VERBOSE=False

# Conversation Compaction Configuration
# Number of conversation loops after which to trigger compaction
COMPACT_AFTER_LOOPS=3

# Context length (in tokens) after which to trigger compaction
COMPACT_CONTEXT_THRESHOLD=50000
